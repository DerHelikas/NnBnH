<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="_NnBnH.Views.UIcontrols.MessageBoxWindow"
        Title="MessageBox"
		Background="#1f1f1f"
		Foreground="#fff">

	<Grid RowDefinitions="50,*,40" Margin="10">

		<Grid Grid.Row="0">
			<Image x:Name="MessageIcon" HorizontalAlignment="Left" Source="avares://_NnBnH/Assets/Icons/MessageBoxAPIexceptionIcon.png" Width="50" Height="50"/>
			<TextBlock x:Name="Caption" HorizontalAlignment="Center" VerticalAlignment="Center" Text="EXCEPTION_MESSAGE_NAME"/>
		</Grid>

		<Grid Grid.Row="1">
			<TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="EXCEPTION_MESSAGE_TEXT" FontSize="10" x:Name="Message"/>
		</Grid>

		<UniformGrid HorizontalAlignment="Center" Columns="2" Grid.Row="2">
			<Button HorizontalAlignment="Center" x:Name="ExitButton" Content="Ok"/>
		</UniformGrid>


	</Grid>


</Window>
